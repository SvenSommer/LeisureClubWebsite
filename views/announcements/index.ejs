<% include ../partials/header %>
    
    
    <h1>Ank√ºndigungen</h1>
    <table class="table table-hover table-responsive">
        <thead>
            <tr>
                <th>Datum</th>
                <th>Titel</th>
                <th>Inhalt</th>
                <th>Autor</th>
                <th>zur Kenntnis genommen von</th>
            </tr>
        </thead>
        <tbody>
            <% announcements.forEach(function(announcement){ %>
            <tr>
                <td><%= moment(announcement.created).format('DD. MMM YYYY') %></td>
                <td><a href="/announcements/<%= announcement._id %>"><%= announcement.title %></a></td>
                <td><span style="white-space: pre-line"><%= announcement.text %></span></td>
                <td><%= announcement.author.username %></td>
                <td><% announcement.accepted.forEach(function(accepter){ %>
                    <%=accepter.username%><br>
                    <% });%>
                </td>
            </tr>
            <% }); %>
        </tbody>
  </table>

<% include ../partials/footer %>