<% include ../partials/header %>


<div class="row">
    <h1 style="text-align: center;"> Erstelle eine neue Ankündigung </h1>
    <div style="width: 30%; margin: 25px auto;">
        <form  action="/announcements" method="POST">
            <div class="form-group">
                <label for="title">Titel</label>
                <input class="form-control" type="text" name="announcement[title]" placeholder="Ankündigungstitel" required>
            </div>
            <div class="field">
                <label>Text</label>
                <textarea class="form-control" name="announcement[text]" rows="10" required></textarea>
            </div>
            <div class="form-group">
               <button class="btn btn-lg btn-primary btn-block">Speichern</button>
            </div>
        </form>
        <a href="/users/<%= currentUser._id %>">Zurück</a>
    </div>
    
</div>


<% include ../partials/footer %>