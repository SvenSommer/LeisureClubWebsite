<% include ../partials/header %>
    <header class=jumbotron>
        <div class="container">
            <h1>Willkommen beim Freizeitverein</h1>
            <p>Veranstaltungen in deiner Region</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/events/new">Neue Veranstaltung hinzufÃ¼gen</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% events.forEach(function(event){ %>
            <div class="col-md-3 col-sm-6">
                <div class= "thumbnail">
                    <img src ="<%= event.image %>">
                    <div class="caption">
                        <h5><%= event.date %></h5>
                        <h4><%= event.title %></h4>
                    </div>
                    <p><%= event.description.substring(0,100)%>...</p>
                    <p>
                        <a href="/events/<%= event._id %>" class="btn btn-primary">Mehr lesen...</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>

