<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;"> Erstelle eine neue Veranstaltung</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form  action="/events" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="title" placeholder="Veranstaltungstitel">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Bild">
                </div>
                <div class="field">
                    <label>Beschreibung</label>
                    <textarea name="description"></textarea>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="place" placeholder="Ort der Veranstaltung">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="meetingpoint" placeholder="Treffpunkt">
                </div>
                <div class="form-group">
                    <input class="form-control" type="date" name="date" placeholder="Datum">
                </div>
                <div class="form-group">
                    <input class="form-control" type="time" name="time" placeholder="Zeit">
                </div>
                <div class="form-group">
                    <input class="form-control" type="date" name="deadline" placeholder="Anmeldeschluss">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="fee" min="0.00" step ="0.1" placeholder="Bearbeitungsgebühr in €">
                </div>
                <div class="form-group">
                   <button class="btn btn-lg btn-primary btn-block">Speichern</button>
                </div>
            </form>
            <a href="/events">Zurück</a>
        </div>
        
    </div>

</div>
<% include ../partials/footer %>