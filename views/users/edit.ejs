<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center;"> Ändere dein Profil <%= user.username%></h1>
    <div style="width: 30%; margin: 25px auto;">
        <form  action="/users/<%= user._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="firstname">Vorname</label>
                <input class="form-control" type="text" name="user[firstname]" value="<%= user.firstname%>">
            </div>
            <div class="form-group">
                <label for="lastname">Nachname</label>
                <input class="form-control" type="text" name="user[lastname]" value="<%= user.lastname%>">
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input class="form-control" type="email" name="user[email]" value="<%= user.email%>">
            </div>
            <div class="form-group">
                <%if(user.avatar != "") {%>
                    <label>Bild</label>
                    <div class="thumbnail">
                        <img class="img-responsive" src="<%=user.avatar%>">
                    </div>
                    <label>Anderes Bild hochladen</label>
                    <input class="form-control" type="file" id="user[avatar]" name="user[avatar]" accept="image/*" >
                    <!-- Bild ersetzen Datei auswählen-->
                <% } else { %>
                    <!-- Bild hochladen (optional)-->
                    <label>Bild (optional)</label>
                    <input class="form-control" type="file" id="user[avatar]" name="user[avatar]" accept="image/*" >
                <% } %>
            </div>
            
            <div class="form-group">
                <label for="birthday">Geburtsdatum</label>
                <input class="form-control" type="date" name="user[birthday]" value="<%= user.birthday%>">
            </div>
            <div class="form-group">
                <label for="streetAndNumber">Straße und Hausnummer</label>
                <input class="form-control" type="text" name="user[streetAndNumber]" value="<%= user.streetAndNumber%>">
            </div>
            <div class="form-group">
                <label for="zipcode">Postleitzahl</label>
                <input class="form-control" type="text" name="user[zipcode]" value="<%= user.zipcode%>">
            </div>
            <div class="form-group">
                <label for="city">Stadt</label>
                <input class="form-control" type="text" name="user[city]" value="<%= user.city%>">
            </div>
            <div class="form-group">
                <label for="telephone">Telefonnummer</label>
                <input class="form-control" type="text" name="user[telephone]" value="<%= user.telephone%>">
            </div>
            <div class="form-group">
                <label for="telephone">Mobilnummer</label>
                <input class="form-control" type="text" name="user[mobil]" value="<%= user.mobil%>">
            </div>
            <div class="form-group">
                <label for="viewClassic">klassische Veranstaltungstabelle anzeigen?</label>
                <% if(user.viewClassic) { %>
                    <input class="form-control" type="checkbox" name="user[viewClassic]" checked>
                <% } else { %>
                    <input class="form-control" type="checkbox" name="user[viewClassic]" >
                <% }%>
            </div>
            
            <div class="form-group">
               <button class="btn btn-lg btn-primary btn-block">Änderung Speichern</button>
            </div>
        </form>
        <a href="/users">Zurück</a>
    </div>
    
</div>

<% include ../partials/footer %>