<% include ../partials/header %>
    
    
    <h1>Mitglieder der <%= clubname_gen %></h1>
    <table class="table table-hover table-responsive">
        <thead>
            <tr>
                <th>Benutzername</th>
                <th>Vorname</th>
                <th>Nachname</th>
                <th>Geburtsdatum</th>
                <th>Email</th>
                <th>Telefonnummer</th>
                <th>Mobil</th>
                <% if(currentUser.isAdmin) { %>
                <th>letzter Login</th>
                <th>Status</th>
                <% } %>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(function(user){ %>
            <% if (moment(user.birthday).format("DD.MM")==moment().format("DD.MM")) { %> 
            <tr class="info">
            <% } else {%>
            <tr>
            <% }%>
                <td><a href="/users/<%= user._id %>"><%= user.username %></a></td>
                <td><a href="/users/<%= user._id %>"><%= user.firstname %></a></td>
                <td><a href="/users/<%= user._id %>"><%= user.lastname %></a></td>
                <td><a href="/users/<%= user._id %>">
                    <% if(user.birthday) { %> 
                        <%=moment(user.birthday).format('DD. MM. YYYY') %></a>
                    <% } %>
                    <% if (moment(user.birthday).format("DD.MM")==moment().format("DD.MM")) { %> 
                    <i class="fa fa-birthday-cake" aria-hidden="true"></i>
                    <% }%>
                </td>
                <td><a href="mailto:<%= user.email %>"><%= user.email %></a></td>
                <td><a href="/users/<%= user._id %>"><%= user.telephone %></a></td>
                <td><a href="/users/<%= user._id %>"><%= user.mobil %></a></td>
                <% if(currentUser.isAdmin) {  %>
                    <td>
                        <%= moment(user.lastLogin).utcOffset(60).format("DD.MM.YYYY HH:mm") %>
                    </td>
                    <td>
                            <% if(user.isActive && !user.isAdmin) { %>
                                <a class="btn btn-xs btn-danger" href="/users/<%= user._id %>/toggle_active">sperren</a>
                            <% } else if( !user.isAdmin) {%>
                                <a class="btn btn-xs btn-success" href="/users/<%= user._id %>/toggle_active">freischalten</a>
                            <% } else { %>
                                Administrator
                            <% } %>
                    </td>
                   
                <% } %>
            </tr>
            <% }); %>
        </tbody>
  </table>

<% include ../partials/footer %>