<% include ../partials/header %>
    
    
    <h1>Mitglieder des <%= clubname %></h1>
    <table class="table table-hover table-responsive">
        <thead>
            <tr>
                <th>Benutzername</th>
                <th>Vorname</th>
                <th>Nachname</th>
                <th>Geburtsdatum</th>
                <th>Email</th>
                <th>Telefonnummer</th>
                <th>Mobil</th>
                <% if(currentUser.isAdmin) { %>
                <th>Legitimiation</th>
                <% } %>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(function(user){ %>
            <tr>
                <td><a href="/users/<%= user._id %>"><%= user.username %></a></td>
                <td><a href="/users/<%= user._id %>"><%= user.firstname %></a></td>
                <td><a href="/users/<%= user._id %>"><%= user.lastname %></a></td>
                <td><a href="/users/<%= user._id %>">
                    <% if(user.birthday) { %> 
                        <%=moment(user.birthday).format('DD. MM. YYYY') %></a></td>
                    <% } %>
                <td><a href="mailto:<%= user.email %>"><%= user.email %></a></td>
                <td><a href="/users/<%= user._id %>"><%= user.telephone %></a></td>
                <td><a href="/users/<%= user._id %>"><%= user.mobil %></a></td>
                <td>
                    <% if(user.isActive && !user.isAdmin && currentUser.isAdmin) { %>
                        <a class="btn btn-xs btn-danger" href="/users/<%= user._id %>/toggle_active">sperren</a>
                    <% } else if(currentUser.isAdmin && !user.isAdmin) {%>
                        <a class="btn btn-xs btn-success" href="/users/<%= user._id %>/toggle_active">freischalten</a>
                    <% } else if(currentUser.isAdmin){ %>
                        Administrator
                    <% } %>
                    
                </td>
            </tr>
            <% }); %>
        </tbody>
  </table>

<% include ../partials/footer %>